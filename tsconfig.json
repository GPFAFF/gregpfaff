{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "allowJs": true,
    "paths": {
      "src": [
        "src"
      ]
    },
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true,
  }
}
