{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "allowJs": true,
    "paths": {
      "src": [
        "src"
      ]
    },
    "sourceMap": false,
    "target": "es6",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
}
